<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentForm"
    android:background="#fff"
    android:padding="20dp">

    <include
        android:id="@+id/toolbar2"
        layout="@layout/toolbar2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="153dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Payment methode"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="401dp"
        android:layout_height="67dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:src="@drawable/cardimg" />

    <TextView
        android:id="@+id/titre2"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="186dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="CardNumber"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/titre2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custumeditnumber"
        android:drawableLeft="@drawable/mastercardicon"
        android:drawablePadding="16dp"
        android:ems="10"
        android:maxLength="16"
        android:textColor="@color/darkblue"
        android:fontFamily="@font/nunito_bold"
        android:hint="****   ****   ****     ****"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNumberDecimal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Valid Util"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custumeditnumber"
        android:ems="10"
        android:maxLength="7"
        android:fontFamily="@font/nunito_bold"
        android:hint="Month / Year"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNumberDecimal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="81dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="CVV"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/edittext2"
        android:layout_marginEnd="20dp"
        android:hint="****"
        android:textAlignment="center"
        android:ems="10"
        android:maxLength="4"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/darkblue"
        android:textSize="16sp"
        android:inputType="numberPassword"       android:background="@drawable/custumeditnumber" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Card Holder"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custumeditnumber"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fontFamily="@font/nunito_bold"
        android:hint="Please enter Your name.."
        android:maxLength="25"
        android:paddingLeft="20dp"
        android:textColor="@color/darkblue"
        android:textSize="18sp" />
    
    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Save Card data for future payment "
        android:textColor="@color/pruple"
        android:textSize="14sp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_below="@+id/switch1"
        android:layout_marginTop="96dp"
        android:text="Processed to confirm"
        android:fontFamily="@font/nunito_bold"
        android:textSize="16sp"
        android:backgroundTint="@color/pruple" />


</RelativeLayout>